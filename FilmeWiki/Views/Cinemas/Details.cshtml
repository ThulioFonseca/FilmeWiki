@model FilmeWiki.Models.Cinema

@{
    ViewData["Title"] = "Detalhes do Cinema";
}

<div class="container mt-3">
<h2>Detalhes do Cinema</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cidade)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UF)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UF)
        </dd>
    </dl>

        <br/>

        <h4 class="">Filmes em Cartaz:</h4>
        
        <hr />
    
    <dl class="dl-horizontal">

      @foreach(var item in Model.Cartaz){

      
        <dt>
            @Html.DisplayNameFor(model => item.Filme.Titulo)
            
        </dt>
        <dd>
            @Html.DisplayFor(model =>item.Filme.Titulo)
        </dd>      
        <dt>
            @Html.DisplayNameFor(model => item.Filme.Classificacao)
            
        </dt>
        <dd>
            @Html.DisplayFor(model =>item.Filme.Classificacao)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => item.Filme.Preco)
            
        </dt>
        <dd>
            @Html.DisplayFor(model =>item.Filme.Preco)
        </dd>
        <hr />
    }  

    </dl>
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID" class= "btn btn-primary">Editar</a> 
    <a asp-action="Index" class="btn btn-danger">Voltar</a>
</div>
</div>