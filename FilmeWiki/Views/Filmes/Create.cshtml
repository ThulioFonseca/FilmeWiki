@model FilmeWiki.Models.Filme

@{
    ViewData["Title"] = "Cadastrar Filme";
}
<div class="container mt-3">
    
    <h2 class="row justify-content-center">Cadastrar Filme</h2>


         <hr />
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Titulo" class="control-label fw-bolder"></label>
                            <input asp-for="Titulo" class="form-control" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Lancamento" class="control-label fw-bolder"></label>
                            <input asp-for="Lancamento" class="form-control" />
                            <span asp-validation-for="Lancamento" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Genero" class="control-label fw-bolder"></label>
                            <select asp-for="Genero" class="form-control" >
                                    <option value="">Selecione</option>
                                    <option value="Ação">Ação</option>
                                    <option value="Aventura">Aventura</option>
                                    <option value="Comédia">Comédia</option>
                                    <option value="Drama">Drama</option>
                                    <option value="Ficção Científica">Ficção Científica</option>
                                    <option value="Romance">Romance</option>
                                    <option value="Terror">Terror</option>
                                    <option value="Suspense">Suspense</option>
                                    <option value="Documentário">Documentário</option>
                                    <option value="Infantil">Infantil</option>
                                    <option value="Musical">Musical</option>
                                    <option value="Fantasia">Fantasia</option>
                                    <option value="Faroeste">Faroeste</option>
                        
                                
                                
                            </select>
                            <span asp-validation-for="Genero" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Preco" class="control-label fw-bolder"></label>
                            <input asp-for="Preco" class="form-control" />
                            <span asp-validation-for="Preco" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Classificacao" class="control-label fw-bolder"></label>
                            <select asp-for="Classificacao" class="form-control" >
                                        
                                     <option value="">Selecione</option>
                                     <option value="L">Livre</option>
                                     <option value="10">10 Anos</option>
                                     <option value="12">12 Anos</option>
                                     <option value="14">14 Anos</option>
                                     <option value="16">18 Anos</option>                                     

                                
                            </select>
                            <span asp-validation-for="Classificacao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-danger">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>

            <div>
    
        </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
